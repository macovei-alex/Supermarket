<Page x:Class="Supermarket.View.MainWindow.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Supermarket.View.MainWindow"
	  xmlns:context="clr-namespace:Supermarket.ViewModel.MainWindowVMs"
      mc:Ignorable="d"
      Title="AdminMenu">

	<Page.DataContext>
		<context:MainMenuPageVM/>
	</Page.DataContext>

    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Button Grid.Row="0" Content="Users" Style="{StaticResource DefaultButtonStyle}" Command="{Binding UsersCommand}" Margin="30, 15, 30, 5"/>
		<Button Grid.Row="1" Content="Products" Style="{StaticResource DefaultButtonStyle}" Command="{Binding ProductsCommand}" Margin="30, 5"/>
		<Button Grid.Row="2" Content="Stocks" Style="{StaticResource DefaultButtonStyle}" Command="{Binding StocksCommand}" Margin="30, 5"/>
		<Button Grid.Row="3" Content="Employee Statistics" Style="{StaticResource DefaultButtonStyle}" Command="{Binding EmployeeStatisticsCommand}" Margin="30, 5, 30, 15"/>
	</Grid>
</Page>
